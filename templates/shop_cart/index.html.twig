{% extends 'base.html.twig' %}

{% block title %}ShopCart index{% endblock %}

{% block body %}
    <h1>ShopCart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop_cart in shop_carts %}
            <tr>
                <td>{{ shop_cart.id }}</td>
                <td>{{ shop_cart.quantity }}</td>
                <td>
                    <a href="{{ path('app_shop_cart_show', {'id': shop_cart.id}) }}">show</a>
                    <a href="{{ path('app_shop_cart_edit', {'id': shop_cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shop_cart_new') }}">Create new</a>
{% endblock %}
