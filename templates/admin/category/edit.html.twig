{% extends 'adminbase.html.twig' %}
{% block title %}Edit Category{% endblock %}

{% block content %}

    <div class="container-fluid">

        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">


                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>

                    </div>

                </div>
            </div>
        </div>
        <div class="card">
            <form action="{{ path ('app_admin_category_update', {'id' : rs.id}) }}" class="form-horizontal" method="post">
                <div class="card-body">
                    <h4 class="card-title">Update Category Form</h4>
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Parent</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" name="parent_id" value="{{ rs.parentid }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Title</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="title" value="{{ rs.title }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Keywords</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="keywords" value="{{ rs.keywords }}" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" value="{{ rs.description }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Slug</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="slug" value="{{ rs.slug }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Status</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="status" >
                                <option selected> {{ rs.status }}</option>
                                <option>True</option>
                                <option>False</option>

                            </select>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
            </form>
        </div>

    </div>


{% endblock %}
