{% extends 'homebase.html.twig' %}

{% block title %} User profil {% endblock %}


{% block sidebar %} {% include ('home/sidebar.html.twig')%}  {% endblock %}

{% block content %}

<!-- Header Start -->

<div class="container-fluid page-header">

    <div class="container">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-4 text-white text-uppercase">USER</h3>

        </div>
    </div>
</div>


<!-- Header End -->
<!-- Contact Start -->
<div class="row">
    <div class="col-md-3">
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="text-center mb-3 pb-3">
                    <h1>User Menu</h1>

                </div>
                <div class="row justify-content-center">
                    {% include 'user/usermenu.html.twig' %}

                </div>




            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="text-center mb-3 pb-3">
                    <h1>Profil Bilgileri</h1>

                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="contact-form bg-white" style="padding: 40px;">
                            <div id="success"></div>
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ user.password }}</td>
                                </tr>
                                <tr>
                                    <th>IsVerified</th>
                                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ user.name }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ user.image }}</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>{{ user.phone }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ user.address }}</td>
                                </tr>
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>
{% endblock %}