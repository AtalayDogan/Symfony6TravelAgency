{% extends 'homebase.html.twig' %}

{% block title %} Home Anasayfa {% endblock %}

{% block sidebar %} {% include ('home/sidebar.html.twig')%}  {% endblock %}

{% block content %}

    <!-- Header Start -->

    <div class="container-fluid page-header">

        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">


            </div>
        </div>
    </div>


    <!-- Header End -->
    <!-- Blog Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Blog Detail Start -->
                    <div class="pb-3">
                        <div class="blog-item">
                            <div class="position-relative">
                                <img class="img-fluid w-100" src="{{ asset('uploads/images/'~ product.image) }}" alt="">

                            </div>
                        </div>
                        <div class="bg-white mb-3" style="padding: 30px;">
                            <div class="d-flex mb-3">
                                <a class="text-primary text-uppercase text-decoration-none" href="">Admin</a>

                                <span class="text-primary px-2">|</span>
                                <a class="text-primary text-uppercase text-decoration-none" href="">Tours & Travel</a>
                            </div>

                        </div>
                    </div>
                    <!-- Blog Detail End -->

                    <!-- Comment List Start -->
                    <div id="urun" class="bg-white" style="padding: 30px; margin-bottom: 30px;">


                        <div class="media">

                            <div class="media-body">

                                <p>{{ product.detail | raw }}</p>


                            </div>
                        </div>
                    </div>
                    <!-- Comment List End -->


                </div>

                <div class="col-lg-4 mt-5 mt-lg-0">
                    <!-- Author Bio -->
                    <div class="d-flex flex-column text-center bg-white mb-5 py-5 px-4">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <h3 class="text-primary mb-3">{{ product.title }}</h3>
                        <h4 >Tur : {{ product.keywords }}</h4>
                        <h4>Fiyat : {{ product.price }}$</h4>
                        <h4>Kalan Oda : {{ product.quantity }}</h4>
                        <div class="product-btns">
                            <form action="{{ path ('app_shop_cart_add')}}" method="post">

                                    <div class="input">
                            <span class="text-uppercase">Oda Sayısı:</span>

                                <input class="input" type="number"  name="quantity" value="1" min="1" max="{{ product.quantity }}">
                                <input type="hidden" name="product_id" value="{{ product.quantity }}">

                                    </div>
                            <button class="btn btn-primary"><i class="-shopping-cart"></i>Add To Cart</button>
                            </form>
                        </div>
                        <div class="d-flex mb-3">
                            <a class="text-primary text-uppercase text-decoration-none" href="#urun">Detaylar</a>
                            <span class="text-primary px-2">|</span>

                        </div>

                    </div>



                    <!-- Category List -->
                    <div class="mb-5">
                        <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Categories</h4>
                        <div class="bg-white" style="padding: 30px;">

                        </div>
                    </div>




                </div>
            </div>
        </div>
    </div>
    <!-- Blog End -->
</div>
    <!-- Contact End -->


{% endblock %}
